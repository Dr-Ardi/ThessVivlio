<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/shlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/shlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThessVivlio"
        tools:targetApi="31">
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.ThessVivlio" />
        <activity
            android:name=".BorrowedActivity"
            android:exported="false" />
        <activity
            android:name=".AdminScreenActivity"
            android:exported="false" />
        <activity
            android:name=".BrowseActivity"
            android:exported="false" />
        <activity
            android:name=".BookActivity"
            android:exported="false"/>
        <activity
            android:name=".BorrowedBookActivity"
            android:exported="false"/>
        <activity
            android:name=".LentBookActivity"
            android:exported="false"/>
        <activity
            android:name=".LibraryActivity"
            android:exported="false"/>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>